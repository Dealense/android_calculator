<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/pasuxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="19sp"
        android:textColor="#333"
        android:gravity="end" />
        <TextView
            android:id="@+id/formula"
            android:layout_width="match_parent"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/n1"
            android:layout_width="0dp"
            android:onClick="getnum"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="1"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/n2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="getnum"
            android:layout_height="40dp"
            android:text="2"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/n3"
            android:layout_width="0dp"
            android:onClick="getnum"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="3"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="getnum"
            android:layout_height="40dp"
            android:text="+"
            android:textColor="#000"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/n4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="getnum"
            android:layout_height="40dp"
            android:text="4"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/n5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:onClick="getnum"
            android:text="5"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/n6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="getnum"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="6"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="getnum"
            android:layout_height="40dp"
            android:text="-"
            android:textColor="#000"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/n7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="7"
            android:textColor="#000"
            android:onClick="getnum"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/n8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:onClick="getnum"
            android:text="8"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/n9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="getnum"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="9"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="%"
            android:onClick="getnum"
            android:textColor="#000"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/ce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="getnum"
            android:layout_height="40dp"
            android:text="CE"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:layout_height="40dp"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/წინა"
            android:layout_width="0dp"
            android:text="წინა"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:textColor="#000"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:onClick="getnum"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="*"
            android:textColor="#000"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>